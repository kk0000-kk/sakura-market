<div class="container">
  <div class="vstack gap-3">
    <%= paginate products %>
    <div class="row gy-3">
      <% products.each do |product| %>
        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
          <%= link_to product_path(product), id: 'product-show-link',
                                             class: 'link-info link-underline link-underline-opacity-0 link-underline-opacity-100-hover' do %>
            <div class="card text-center p-2">
              <div class="d-block mx-auto thumbnail">
                <%= product_image(product, :thumbnail, '64x64') %>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text">
                  <%= number_with_delimiter(product.price_with_tax) %>円（税込）
                </p>
                <p class="card-text">
                  <%= product.description %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= paginate products %>
  </div>
</div>
