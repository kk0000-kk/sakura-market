<div class='container d-flex flex-column gap-2'>
  <h2>商品一覧</h1>
  <%= paginate @products %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col"></th>
        <th scope="col">商品名</th>
        <th scope="col">価格（税抜）</th>
        <th scope="col">説明</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @products.each do |product| %>
        <tr>
          <th scope="row"><%= product.id %></th>
          <td><%= image_tag product.image.variant(:page_display), size: '64x64' if product.image.attached? %></td>
          <td><%= product.name %></td>
          <td><%= number_with_delimiter(product.price) %></td>
          <td><%= product.description %></td>
          <td>
            <%= link_to '詳細', product_path(product), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @products %>
</div>
