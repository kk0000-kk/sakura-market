<div class='container'>
  <h2>商品詳細</h2>
  <div class="d-flex flex-column gap-4">
    <div class="border text-center">
      <%= @product.image.attached? ? (image_tag @product.image.variant(:page_display)) : "画像なし" %>
    </div>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th scope="col">id</th>
          <td scope="row"><%= @product.id %></td>
        </tr>
        <tr>
          <th scope="col">商品名</th>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <th scope="col">価格（税抜）</th>
          <td><%= number_with_delimiter(@product.price) %></td>
        </tr>
        <tr>
          <th scope="col">説明</th>
          <td><%= @product.description %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="mt-4">
    <%= link_to '一覧へ戻る', products_path %>
  </div>
</div>
