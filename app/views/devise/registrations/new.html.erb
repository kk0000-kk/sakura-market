<h2>Sign up</h2>
<div class='form-signup'>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <div class='d-grid'>
      <div class='field'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form_control container-fluid' %>
      </div>
      <div class='field'>
        <%= f.label :nick_name %>
        <%= f.text_field :nick_name, autocomplete: 'nick_name', class: 'form_control container-fluid' %>
      </div>
      <div class='field'>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form_control container-fluid' %>
      </div>
      <div class='field'>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form_control container-fluid' %>
      </div>
      <div class='actions'>
        <%= f.submit 'Sign up', class: 'btn btn-primary form-control my-3 container-fluid'  %>
      </div>
    <% end %>
  </div>
  <div class='text-center'>
    <%= render 'devise/shared/links' %>
  </div>
</div>
