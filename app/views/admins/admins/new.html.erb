<div class='container'>
  <h2>管理者追加</h2>
  <%= simple_form_for(@admin, url: admins_admins_path)  do |f| %>
    <%= f.input :email, autofocus: true %>
    <%= f.input :password, hint: "(#{@minimum_password_length}文字以上)" %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, '追加する', class: 'btn btn-primary my-3' %>
  <% end %>
  <%= link_to '管理者一覧に戻る', admins_admins_path %>
</div>
