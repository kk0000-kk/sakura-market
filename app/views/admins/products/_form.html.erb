<%= simple_form_for(@product, url: url) do |f| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, 'error') %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= image_tag product.image.variant(:display) if product.image.attached? %>
  <%= f.input :image, label: '画像' %>
  <%= f.input :name, label: '名前' %>
  <%= f.input :price, label: '価格（税抜）' %>
  <%= f.input :description, label: '説明' %>
  <%= f.input :position, label: '表示順' %>
  <%= f.input :disabled, label: '非表示' %>
  <%= f.button :submit, button_label, class: 'btn btn-primary my-3' %>
<% end %>
