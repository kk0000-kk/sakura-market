<%= simple_form_for(@product, url:) do |f| %>
  <%= render 'shared/error', resource: @product %>
  <%= product_image(product, :page_display, '') %>
  <%= f.input :image %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :position %>
  <%= f.input :disabled %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
