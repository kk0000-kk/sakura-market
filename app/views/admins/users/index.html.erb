<div class='container d-flex flex-column gap-2'>
  <h2>ユーザー一覧</h1>
  <%= paginate @users, theme: 'bootstrap-5' %>
  <ul class='list-group'>
    <% @users.each do |user| %>
      <li class='list-group-item d-flex align-items-center'>
        <%= user.nick_name %>
        <%= "<#{user.email}>" %>
        <%= button_to '削除', admins_user_path(user), method: :delete, data: { turbo_confirm: '削除しますが、よろしいですか?' }, class: 'btn btn-danger btn-sm ms-4' %>
      </li>
    <% end %>
  </ul>
  <%= paginate @users, theme: 'bootstrap-5' %>
</div>
